#!/bin/sh

case $1 in 
    "desktop") user="focus"
    ;;
    "laptop") user="focus"
    ;;
    "asahi") user="evan"
    ;;
    *) echo "Enter a host to rebuild: desktop, laptop, or asahi" && exit 1
    ;;
esac

echo "Rebuilding user configuration..."
home-manager switch --flake ".#$user"

# to rebuild system configuration, run:
# sudo nixos-rebuild switch
